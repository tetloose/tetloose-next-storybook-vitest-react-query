{
  "name": "tetloose-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "yarn && husky install && yarn dev",
    "turbopack": "next dev --turbopack",
    "watch:ts": "chokidar 'app/**/*.{ts,tsx}' -c 'eslint \"app/**/*.{ts,tsx}\"'",
    "watch:styles": "chokidar 'app/**/*.{css,scss}' -c 'stylelint \"app/**/*.{css,scss}\"'",
    "dev": "concurrently --names \"Turbopack,TS,Styles\" --prefix \"[{name}]\" --prefix-colors \"cyan,magenta,yellow\" \"yarn turbopack\" \"yarn watch:ts\" \"yarn watch:styles\"",
    "lint": "eslint ./app && stylelint \"./app/**/*.scss\"",
    "lint:fix": "eslint ./app --fix && stylelint \"./app/**/*.scss\" --fix",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "gen:component": "bash toolkit generate-component",
    "git:commit": "bash toolkit git-commit",
    "pre-commit": "yarn lint && yarn test run"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.66.11",
    "@tanstack/react-query-devtools": "^5.66.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.8",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@vitest/coverage-v8": "^3.0.7",
    "classnames": "^2.5.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "next": "15.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hot-toast": "^2.5.2",
    "react-lazy-load-image-component": "^1.6.3",
    "sass": "^1.85.1",
    "stylelint-order": "^6.0.4",
    "vitest": "^3.0.7",
    "vitest-canvas-mock": "^0.3.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.21.0",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@tanstack/eslint-plugin-query": "^5.66.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "chokidar-cli": "^3.0.0",
    "eslint-config-next": "15.2.2",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "react-hook-form": "^7.54.2",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5",
    "typescript-eslint": "^8.25.0"
  },
  "prettier": {
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "none"
  }
}
